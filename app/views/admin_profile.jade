extends layout

block content
	include navigationbar.jade
	div.container
		h3.text-center User Directory
		div.row.col-md-8.col-md-offset-2.text-center#user_directory
		div.modal.fade(tabindex="-1" role="dialog")#profile_modal
			div.modal-dialog
				div.modal-content
					div.modal-header
						button.close(type="button" data-dismiss="modal")
							span(aria-hidden="true") &times;
						h4.modal-title#username_header
					div.modal-body
						form(method="post")#profile_form
							div.alert.alert-danger(role="alert")#alert_bar
							div.form-group
								label.control-label.col-md-4('for'="username") Username
								div.col-md-4
									input.form-control.input-medium#username(type="text" name="username")
							div.form-group
								label.control-label.col-md-4('for'="password") Password
								div.col-md-4
									input.form-control.input-password.input-medium#password(type="password" placeholder="Password" name="password")
							div.form-group
								label.control-label.col-md-4('for'="account_status_selection") Account status
								div.col-md-4
									select.form-control#account_status_selection
										option(value="ACTIVE") Active
										option(value="INACTIVE") Inactive
							div.form-group
								label.control-label.col-md-4('for'="privilege_selection") Privilege level
								div.col-md-4
									select.form-control#privilege_selection
										option(value="ADMINISTRATOR") Administrator
										option(value="MONITOR") Monitor
										option(value="COORDINATOR") Coordinator
										option(value="CITIZEN") Citizen
							div.form-group
								div.col-md-4.col-md-offset-2
									button.btn.btn-default(data-dismiss="modal")#close_btn Close
									button.btn.btn-primary(type="submit")#save_btn Save changes

append footer
	script(src="../../js/jquery.validate.min.js")
	script(src="../../js/admin.js")