extends layout	

block content
	.container
		.row
			.col-xs-12.col-sm-8.col-md-6.col-sm-offset-2.col-md-offset-3
				form(action="/admin-login", method="post", id="adminLoginForm")
					h2 Admin Login
					br
					.form-group
						.input-group
							span.input-group-addon
									i.glyphicon.glyphicon-user
							input(type="text", name="admin_username", id="admin_username", placeholder="Username").form-control.input-lg
					.form-group
						.input-group
							span.input-group-addon
									i.glyphicon.glyphicon-lock
							input(type="password", name="admin_password", id="admin_password", placeholder="Password").form-control.input-lg
					hr
					.blank
					.row
						.col-xs-12.col-md-6
							input(type="submit", value="Login").btn.btn-primary.btn-block.btn-lg
							br
						.col-xs-12.col-md-6
							a(href="/").btn.btn-danger.btn-block.btn-lg Cancel
				br
				a(href="/signup") Direct to Regular Citizen Signup Page
				br
				a(href="/login") Back to Regular Citizen Login Page

append footer
	script(src="../../js/jquery.validate.min.js")
	script(src="../../js/userinfo.js")